{
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowJs": false,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "downlevelIteration": false,
        "target": "ES5",
        "lib": ["es2015", "es2017", "dom"],
        "outDir": "./dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist/**/*"
    ]
}